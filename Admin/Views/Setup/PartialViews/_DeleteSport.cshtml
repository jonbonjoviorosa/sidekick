@model Sidekick.Model.SportDto;

<div class="modal fade"
     id="deleteCategoryModal"
     tabindex="-1"
     aria-labelledby="deleteCategoryModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Setup" asp-action="DeleteSport" method="post">
                <div class="modal-body px-5 py-0">
                    <div class="text-center">
                        <h5 class="modal-title mb-3" id="appendDeleteSportText">Delete "Category Detail"?</h5>
                        <input type="text" class="form-control" id="delete-sport-name" asp-for="SportId" hidden />
                    </div>
                </div>
                <div class="modal-footer border-0 text-center">
                    <input type="submit" value="Delete" class="btn login-button btn-padding" id="ok-sports-btn" />
                </div>
            </form>
        </div>
    </div>
</div>