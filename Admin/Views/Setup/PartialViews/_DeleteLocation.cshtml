@model Sidekick.Model.Location;

<div class="modal fade"
     id="deleteLocationCategoryModal"
     tabindex="-1"
     aria-labelledby="deleteLocationCategoryModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Setup" asp-action="DeleteLocation" method="post">
                <div class="modal-body px-5 py-0">
                    <div class="text-center">
                        <h5 class="modal-title mb-3" id="appendDeleteLocationText"></h5>
                        <input type="text" id="delete-location-id" asp-for="LocationId" hidden />
                    </div>
                </div>
                <div class="modal-footer border-0 text-center">
                    <input type="submit" value="Delete" class="btn login-button btn-padding" id="ok-location-btn" />
                </div>
            </form>
        </div>
    </div>
</div>