@model Sidekick.Model.SetupConfiguration.SetupConfiguration

<div class="card-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="d-flex justify-content-between align-items-center my-4">
                <h6 class="m-0">Location</h6>
                <a href="#addLocationModal" data-toggle="modal" data-target="#addLocationModal" class="text-warning"><i class="fas fa-plus"></i> Add Location</a>
            </div>
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var location in Model.Locations)
                    {
                        <div class="col-sm-4 gray-right">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="m-0">@location.Name</h6>
                                <div>
                                    <a href="#editLocationModal" data-toggle="modal" data-target="#editLocationModal" class="text-warning mr-3" onclick="editLocation('@location.LocationId', '@location.Name')">Edit</a>
                                    <a href="#deleteLocationCategoryModal" data-toggle="modal" data-target="#deleteLocationCategoryModal" onclick="deleteLocation('@location.LocationId', '@location.Name')" class="text-danger">Delete</a>
                                </div>
                            </div>
                        </div>

                    }
                }

            </div>
        </div>
    </div>
</div>