@model Sidekick.Model.FacilityUserType;

<div class="modal fade"
     id="deleteRoleCategoryModal"
     tabindex="-1"
     aria-labelledby="deleteRoleCategoryModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Setup" asp-action="DeleteRole" method="post">
                <div class="modal-body px-5 py-0">
                    <div class="text-center">
                        <h5 class="modal-title mb-3" id="appendDeleteRoleText"></h5>
                        <input type="text" class="form-control" id="delete-role-id" asp-for="FacilityRoleId" hidden />
                        <input type="text" class="form-control" id="delete-role-name" asp-for="FacilityRoleName" hidden />
                    </div>
                </div>
                <div class="modal-footer border-0 text-center">
                    <input type="submit" value="Delete" class="btn login-button btn-padding" id="ok-role-btn" />
                </div>
            </form>
        </div>
    </div>
</div>
