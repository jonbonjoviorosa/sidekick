                                                <td><input type="text" class="form-control" id="maxDate" name="maxDate"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table class="table table-hover table-bordered table-striped display" id="dtMainList">
                                        <thead class="thead-light">
